<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnd_notebook_2"
    android:visibility="visible"
    tools:context=".ui.attendance.AttendanceFragment"
    tools:visibility="visible">

    <TextView
        android:id="@+id/grades_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="cursive"
        android:alpha="1"
        android:text="Grade Book"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_show_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_blue_on_clear"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grades_title"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/placeholder_show_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="62dp"
        android:fontFamily="cursive"
        android:text="Active"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grades_title"
        />

    <Spinner
        android:id="@+id/spinner_data_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_blue_on_clear"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_show_filter"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/placeholder_data_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Data For:"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_show_filter"
        />

    <Spinner
        android:id="@+id/spinner_users_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_blue_on_clear"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_data_filter"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/placeholder_users_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Users From"
        android:textSize="23sp"
        android:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_data_filter"
        />

    <Button
        android:id="@+id/btn_to_grade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#79FFFFFF"
        android:text="To Grade"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_users_filter"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#79FFFFFF"
        android:text="To Grade"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_users_filter"
        app:layout_constraintWidth_percent=".5" />





    <Button
        android:id="@+id/btn_students"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Students"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_grade"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Students"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_to_grade"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/btn_assessments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Assessments"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_students"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Assessments"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_students"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/btn_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Details"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_assessments"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Details"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_assessments"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/btn_reports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Reports"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_details"
        app:layout_constraintWidth_percent=".5" />

    <Button

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#7CFFFFFF"
        android:text="Reports"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/nav_header_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_details"
        app:layout_constraintWidth_percent=".5" />





</androidx.constraintlayout.widget.ConstraintLayout>