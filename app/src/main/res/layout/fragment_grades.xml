<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnd_notebook_2"
    android:visibility="visible"
    tools:context=".ui.attendance.AttendanceFragment"
    tools:visibility="visible">

    <TextView
        android:id="@+id/grades_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="16dp"
        android:alpha="1"
        android:text="Grade Book"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_show_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_black_on_white"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grades_title"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/placeholder_show_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="62dp"
        android:text="Active"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grades_title"
        />

    <Spinner
        android:id="@+id/spinner_data_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_spinner_black_on_white"
        android:paddingBottom="13dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_show_filter"
        app:layout_constraintWidth_percent=".5" />

    <TextView
        android:id="@+id/placeholder_data_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:text="Data For:"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_show_filter"
        />



</androidx.constraintlayout.widget.ConstraintLayout>